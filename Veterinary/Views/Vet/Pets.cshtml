@model IEnumerable<Veterinary.Models.Pet>

<div class="row">
	<h1 class="col">Pets</h1>
	<div class="col-1 p-0">
		<a asp-controller="Vet" asp-action="AddPet" asp-route-id="@ViewData["ownerId"]" class="btn btn-primary">Add Pet</a>
	</div>
</div>
<div class="container p-0">
	@{if(Model.Count()==0){
			<h2 class="mt-3 text-muted">Client doesn't have any registered pets.</h2>
	}
	else{
		@foreach(var obj in Model)
	{
			<div class="card mt-3">
  	<div class="card-body fs-3"> 
		<h5 class="card-title fs-2">@obj.Name</h5>
					@{
					string gender = "";
					if (obj.Gender == 'f') gender = "female";
					else gender = "male";
					}
		<h6 class="card-subtitle mb-2 text-muted fs-2">A @gender @obj.Color.ToLower() @obj.Type.ToString().ToLower().</h6>
		<h6 class="card-subtitle mb-2 text-muted fs-2">@(DateTime.Today.Year-obj.Birthdate.Year) years and @(DateTime.Today.Month-obj.Birthdate.Month) months old.</h6>
		<p class="card-text">Upcoming vaccines / operations</p>
		<a asp-controller="Vet" asp-action="MedicalDetails" asp-route-id="@obj.PetId" class="btn btn-primary">Medical Details</a>
		<a href="javascript: history.go(-1)" class="btn btn-secondary">Go Back</a>
		</div>
	</div>
	}
	}
	}
</div>
